{
  "root": true,
  "plugins": ["stylelint-order"],
  "customSyntax": "postcss-html",
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "tailwind",
          "extend",
          "variants",
          "apply",
          "responsive",
          "screen"
        ]
      }
    ],
    "font-family-name-quotes": "always-where-required",
    "order/order": [
      [
        "dollar-variables",
        "custom-properties",
        "at-rules",
        "declarations",
        {
          "type": "at-rule",
          "name": "supports"
        },
        {
          "type": "at-rule",
          "name": "media"
        },
        "rules"
      ],
      {
        "severity": "warning"
      }
    ],
    "rule-empty-line-before": [
      "always",
      {
        "ignore": ["after-comment", "first-nested"]
      }
    ]
  },
  "ignoreFiles": ["dist/*.css"]
}
